# Work directory
WORKDIR_PATH = /var/www/

# App vars
APP_DIR = /var/www/mockapi/
APP_ENV_FILE_NAME = env
APP_ENV_FILE_PATH = /var/www/mockapi/.env

# Github package filename and store path 
REMOTE_PKG_NAME = last_package.txt
REMOTE_PKG_PATH = /var/www/last_package.txt

# VHost filename and path
VHOST_FILE_NAME = 000-default.conf
VHOST_FILE_PATH = /etc/apache2/sites-available/000-default.conf

# Apache2 filename and path
APACHE2_FILE_NAME = apache2.conf
APACHE2_FILE_PATH = /etc/apache2/apache2.conf